@if (ContentLog.IsTrimmed)
{
	<div class="row bg-dark">
		<div class="col text-center text-white-50">
			<h2><strong>. . .</strong></h2>
		</div>
	</div>
}

@for (int i = 0; i < ContentLog.Count; i++)
{
	var block = ContentLog[i];
	blockID = $"{BlockIDStart}-{i}";

	switch (block.Type)
	{
		case ContentBlockType.Input:

			<div class="row bg-dark p-0 m-0 g-0">
				<div class="col p-0 m-0">
					<div id="@(blockID)" class="row border-top border-bottom border-light mb-2 pt-1 gx-2 align-items-bottom">
						<div class="col-md-auto text-white">
							<h5>&gt;</h5>
						</div>
						<div class="col text-white">
							@(block.Content)
						</div>
					</div>
				</div>
			</div>

			break;

		case ContentBlockType.LanguageSwitch:

			<div id="@(blockID)" class="row bg-secondary border-top border-bottom border-light mb-2 gx-2 align-items-middle">
				<div class="col text-white">
					@(block.Content)
				</div>
			</div>

			break;

		default:

			<div id="@(blockID)" class="row bg-dark">
				<div class="col text-white">
					<p>@(block.Content)</p>
				</div>
			</div>

			break;
	}
}
